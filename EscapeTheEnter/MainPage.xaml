<Page
    x:Class="EscapeTheEnter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="CornflowerBlue"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Center" Background="#44FFFFFF" Width="700" HorizontalAlignment="Center">
        <TextBox x:Name="Info" Text="Press escape or enter or the buttons" FontSize="30" />
        <StackPanel Orientation="Horizontal">
            
        <Button x:Name="ButtonOK" Content="OK" Width="200"/>
        <Button x:Name="ButtonCancel" Content="Cancel" Width="200"/>
        </StackPanel>
    </StackPanel>
</Page>
